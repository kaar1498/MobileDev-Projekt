<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileDev_Projekt.Pages.RegisterPage"
             Title="Register">
    <ContentPage.Content>
        <StackLayout>
            <Label
                FontSize="Large"
                Text="Create Account"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand" />
            <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="Center" WidthRequest="320" Spacing="20" Padding="10">
                <Entry Placeholder="John Doe"></Entry>
                <Entry Placeholder="John@email.com"></Entry>
                <Entry Placeholder="Password" IsPassword="True"></Entry>
                <Button Padding="30" Text="Create Account" Clicked="CreateButton_Clicked"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>