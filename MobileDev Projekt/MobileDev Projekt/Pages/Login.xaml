<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileDev_Projekt.Pages.Login">
    <ContentPage.Content>
        <StackLayout Spacing="30" Padding="50">
            <!--<Image Source="{local:ImageResource MobileDev_Projekt.Embedded.logo.png}" />-->
            <Label 
                FontSize="Large" 
                Text="PhysioCam"
                HorizontalOptions="Center" />
            <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="Center" WidthRequest="320">
                <Entry
                    FontSize="Large"
                    Placeholder="Brugernavn"/>
                    <Entry
                    FontSize="Large"
                    Placeholder="Password"/>
            </StackLayout>
            <StackLayout Spacing="10">
                <Button WidthRequest="320" HeightRequest="70" VerticalOptions="End" HorizontalOptions="Center" Text="Login"/>
                <Button WidthRequest="320" HeightRequest="70" VerticalOptions="End" HorizontalOptions="Center" Text="Opret"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>