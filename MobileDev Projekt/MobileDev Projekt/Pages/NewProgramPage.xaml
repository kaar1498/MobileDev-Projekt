<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileDev_Projekt.Pages.NewProgramPage"
             Title="Nyt program">
  <ContentPage.Content>
    <StackLayout Margin="5,0,5,0"
                 VerticalOptions="Start">


      <ListView BackgroundColor="Blue">
        <ListView.ItemsSource>
          <x:Array Type="{x:Type x:String}">
            <x:String>mono</x:String>
            <x:String>monodroid</x:String>
          </x:Array>
        </ListView.ItemsSource>
        <ListView.ItemTemplate>
          <DataTemplate>
            <ViewCell>
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition />
                  <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0"
                       Text="{Binding}" />
                <Editor Grid.Column="1" />
              </Grid>
            </ViewCell>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>

      <ListView BackgroundColor="Brown">
        <ListView.ItemsSource>
          <x:Array Type="{x:Type x:String}">
            <x:String>mono</x:String>
            <x:String>monodroid</x:String>
            <x:String>monotouch</x:String>
          </x:Array>
        </ListView.ItemsSource>
        <ListView.ItemTemplate>
          <DataTemplate>
            <ViewCell>
              <SwipeView>
                <SwipeView.LeftItems>
                  <SwipeItems>
                    <SwipeItem Text="Edit"
                               BackgroundColor="LimeGreen"
                               Invoked="EditSwipeItem_OnInvoked" />
                    <SwipeItem Text="Delete"
                               BackgroundColor="OrangeRed"
                               Invoked="DeleteSwipeItem_OnInvoked" />
                  </SwipeItems>
                </SwipeView.LeftItems>
                <Label Text="Test" />
              </SwipeView>
            </ViewCell>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>

      <Button x:Name="ExerciseButton"
              Text="Tilføj øvelse"
              Clicked="ExerciseButton_OnClicked" />

      <Grid Margin="0,0,0,10">
        <Grid.ColumnDefinitions>
          <ColumnDefinition />
          <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0"
                x:Name="UndoButton"
                Text="Fortryd"
                Clicked="UndoButton_OnClicked" />
        <Button Grid.Column="1"
                x:Name="ActionButton"
                Text="Gem/Send"
                Clicked="ActionButton_OnClicked" />
      </Grid>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>