<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileDev_Projekt.App">
    <Application.Resources>
      <ResourceDictionary>
        <Color x:Key="MainColor">#154E4E</Color>
        <Color x:Key="AccentColor">#EDDEE2</Color>
        
        <Style TargetType="Button">
          <Setter Property="HeightRequest" Value="70"></Setter>
          <Setter Property="BorderRadius" Value="15" />
          <Setter Property="TextColor" Value="White" />
          <Setter Property="FontFamily" Value="TextFont" />
          <Setter Property="Margin" Value="5,5,5,5"></Setter>
          <Setter Property="BackgroundColor" Value="#154E4E"></Setter>
        </Style>
        
      </ResourceDictionary>
    </Application.Resources>
</Application>